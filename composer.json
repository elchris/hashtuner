{
    "name": "chrisholland/hashtuner",
    "description": "Framework for tuning settings for password-hashing functions",
    "keywords": ["password hashing", "hashing", "password", "argon2"],
    "license": "MIT",
    "authors": [
        {
            "name": "Chris Holland",
            "email": "chris@hivewind.com"
        }
    ],
    "type": "project",
    "require": {
		"php": ">=7.3",
        "brandembassy/php-memory": "^1.2",
        "ext-json": "*"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master"
        ,
        "phpunit/phpunit": "^8",
        "squizlabs/php_codesniffer": "^3.5",
        "phpstan/phpstan": "^0.12.3"
    },
    "autoload": {
        "psr-4": {
            "ChrisHolland\\HashTuner\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ChrisHolland\\HashTuner\\Test\\": "tests/"
        }
    }
}
